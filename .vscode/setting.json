{
  "editor.acceptSuggestionOnCommitCharacter": true,
  "editor.acceptSuggestionOnEnter": "on",
  "editor.autoClosingBrackets": "always",
  "editor.autoClosingQuotes": "always",
  "editor.autoIndent": "full",
  "editor.codeLens": true,
  "editor.colorDecorators": true,
  "editor.contextmenu": true,
  "editor.cursorBlinking": "smooth",
  "editor.cursorStyle": "line",
  "editor.cursorWidth": 2,
  "editor.detectIndentation": true,
  "editor.dragAndDrop": true,
  "editor.emptySelectionClipboard": true,
  "editor.folding": true,
  "editor.foldingStrategy": "auto",
  "editor.fontFamily": "Fira Code, Menlo, Cascadia Code, Consolas, monospace",
  "editor.fontLigatures": true,
  "editor.fontSize": 13,
  "editor.fontWeight": "450",
  "editor.formatOnPaste": true,
  "editor.formatOnType": false,
  "editor.glyphMargin": false,
  "editor.hover.enabled": true,
  "editor.insertSpaces": true,
  "editor.letterSpacing": 1,
  "editor.lightbulb.enabled": "on",
  "editor.lineDecorationsWidth": 5,
  "editor.lineHeight": 22,
  "editor.lineNumbers": "on",
  "editor.lineNumbersMinChars": 3,
  "editor.links": true,
  "editor.matchBrackets": "always",
  "editor.minimap.enabled": true,
  "editor.minimap.scale": 2,
  "editor.minimap.size": "fit",
  "editor.multiCursorModifier": "ctrlCmd",
  "editor.parameterHints.enabled": true,
  "editor.quickSuggestions": {
    "comments": "on",
    "other": "on",
    "strings": "on"
  },
  "editor.quickSuggestionsDelay": 0,
  "editor.renderControlCharacters": true,
  "editor.renderLineHighlight": "all",
  "editor.renderWhitespace": "selection",
  "editor.rulers": [0, 0, 0],
  "editor.scrollBeyondLastColumn": 4,
  "editor.scrollBeyondLastLine": true,
  "editor.selectionHighlight": true,
  "editor.selectOnLineNumbers": true,
  "editor.showFoldingControls": "always",
  "editor.showUnused": true,
  "editor.smoothScrolling": true,
  "editor.snippetSuggestions": "top",
  "editor.suggestSelection": "first",
  "editor.tabSize": 2,
  "editor.useTabStops": true,
  "editor.wordSeparators": "`~!@#$%^&*()-=+[{]}\\|;:'\",.<>/?",
  "editor.wordWrap": "on",
  "editor.wordWrapColumn": 80,
  "editor.wrappingIndent": "same",
  "workbench.sideBar.location": "left",
  "debug.inlineValues": true,

  "indentRainbow.includedLanguages": [] ,
  "indentRainbow.excludedLanguages": ["plaintext"],
  "indentRainbow.indicatorStyle": "light",
  "indentRainbow.lightIndicatorStyleLineWidth": 1.5,
  "indentRainbow.colors": [
    "rgba(255, 105, 97, 0.25)",
    "rgba(97, 175, 255, 0.25)", 
    "rgba(144, 238, 144, 0.25)", 
    "rgba(255, 215, 0, 0.25)",    
    "rgba(221, 160, 221, 0.25)",  
    "rgba(255, 160, 122, 0.25)"   
  ],
  "indentRainbow.colorOnWhiteSpaceOnly": true ,
  "indentRainbow.ignoreLinePatterns" : [
    "/[ \t]* [*]/g",
    "/[ \t]+[/]{2}/g" 
  ],

  "prettier.semi": true,
  "prettier.singleQuote": true,
  "prettier.tabWidth": 2,
  "prettier.useTabs": false,

  "terminal.integrated.cursorBlinking": true,
  "terminal.integrated.cursorStyle": "block",
  "terminal.integrated.cursorWidth": 2,
  "terminal.integrated.fontSize": 14,
  "terminal.integrated.lineHeight": 1.4,
  "terminal.integrated.minimumContrastRatio": 3,
  "terminal.integrated.fontFamily": "Fira Code, Cascadia Code, Consolas, 'Courier New', monospace",
  "terminal.integrated.fontWeight": "500",
  "terminal.integrated.drawBoldTextInBrightColors": true,
  "terminal.integrated.defaultProfile.windows": "Command Prompt",
  "terminal.integrated.defaultProfile.linux": "bash",
  "terminal.integrated.defaultProfile.osx": "zsh",
  "editor.guides.indentation": true,
  "editor.guides.highlightActiveIndentation": true,
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "editor.formatOnSave": true,
  "recommendations": [
    "dbaeumer.vscode-eslint",
    "esbenp.prettier-vscode",
    "ms-vscode.vscode-typescript-next"
  ]
}
